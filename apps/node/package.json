{
  "name": "bitbuffet",
  "version": "1.0.0",
  "description": "TypeScript SDK for the Structured Scraper API - BitBuffet",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern=\"Integration\"",
    "test:manual": "ts-node tests/client.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "scraper",
    "api",
    "client",
    "typescript",
    "zod",
    "web-scraping",
    "structured-data"
  ],
  "author": "Yuliyan Stefanov <ystefanov.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ystefanov6/bitbuffet-clients.git",
    "directory": "apps/node"
  },
  "homepage": "https://github.com/ystefanov6/bitbuffet-clients#readme",
  "bugs": {
    "url": "https://github.com/ystefanov6/bitbuffet-clients/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^17.2.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
